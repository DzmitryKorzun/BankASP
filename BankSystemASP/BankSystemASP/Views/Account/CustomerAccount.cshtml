@using BankSystemASP.Domain.AuxiliaryModel
@model UserAccountModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!doctype html>
<html lang="ru">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Банк</title>
  <link href="@Url.Content("~/css/TransactionStyle.css")" rel="stylesheet" type="text/css"/>  
  <link href="@Url.Content("~/css/styles.css")" rel="stylesheet" type="text/css" />
  <script src="@Url.Content("~/lib/jquery/dist/jquery.min.js")" type="text/javascript"></script> 
  <script src="@Url.Content("~/lib/jquery/dist/JQ.js")" type="text/javascript"></script> 
</head>



<body>
      <div class="topnav">
      <div class="mainLogo">
        <h1>ДмитриБанк</h1>
      </div>
        <a href='@Url.Action("Index","Home")'>Главная</a>
        <a href='@Url.Action("About","Home")'>О банке</a>
        <a href='@Url.Action("ExchangeRatesView","ExchangeRates")'>Курсы</a>
        <a href='@Url.Action("Branches","Branch")'>Филлиалы</a>
      </div>
     
       <div class ="transactionPage">
            <div>
        <h2>Счета</h2>
        <div style="display: flex; width: 400px; justify-content: space-between">
            <button style="height: 40px" type="submit" class="btn">Создать</button>
            <select name="">
                <option selected disabled>Валюта</option>
                <option value="1">USD</option>
                <option value="2">BYN</option>
                <option value="4">Euro</option>
                <option value="4">RUB</option>
                <option value="3">CNY</option>
                
            </select>
        </div>
        <div class="info-block">
            <div class="bank-info">
                <div class="main info">
                    <div><span>Номер:</span> 1357-8448-5429-4352</div>
                    <div><span>CVV:</span> 764</div>
                    <div><span>Валюта:</span> BYN</div>
                    <div><span>Баланс:</span> 50</div>
                </div>
            </div>
            
        </div>
    </div>
    <div>
        <h2>Перевод с карты на карту</h2>
        <p class="text">Переводы между карточками, эмитированными банками Республики Беларусь</p>
        <div class="transactionForm">
            <div class="transactionFormData from">
                <div>Номер платежной карты</div>
                <input placeholder="Номер карты" class="cardMask">
                <input placeholder="Срок действия" class="dateMask">
                <input placeholder="CVV код" class="cvvMask">
            </div>
            <div class="transactionForm_arrow">
                <p><i class="arrow right"></i></p>
            </div>
            <div class="transactionFormData to">
                <div>Номер карты получателя</div>
                <input placeholder="Номер карты" class="cardMask">
                <input placeholder="Срок действия" class="dateMask">
            </div>
        </div>
        <div class="transactionWrapper">
            
            <div class="transactionButton">
                <input type="text" placeholder="Сумма" name="sum" required>
                <button type="submit" class="btn">Перевести</button>
            </div>
        </div>

        <script>
            $(".cardMask").mask("9999-9999-9999-9999");
            $(".cvvMask").mask("999");
            $(".dateMask").mask("99/99");
        </script>
    </div>


       </div>

   
</body>
</html>